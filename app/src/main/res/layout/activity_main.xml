<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <Button
        android:id="@+id/button_ask_for_help"
        android:text="Ask for Help"
        style="@style/CategoryStyle"
        android:fontFamily="cursive"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="40sp"
        android:background="@color/mint"
        android:onClick="openAskForHelp" />

    <Button
        android:id="@+id/imageButton"
        android:text="Calm down and listen to some Music!"
        style="@style/CategoryStyle"
        android:background="@color/lightmint"
        android:onClick="openMusic"
        />

    <Button
        android:id="@+id/button_warning_signs"

        android:text="Warning Signs !!!"

        style="@style/CategoryStyle"
        android:background="@color/mint"
        android:onClick="openWarningSignsActivity"/>

    <Button
        android:id="@+id/button_reasons"

        android:text="What are your reasons to live ?"
        style="@style/CategoryStyle"
        android:background="@color/lightmint"
        android:onClick="openReasons"/>

    <Button
        android:id="@+id/button_safety"
        android:text="Safety Plan Guide"
        style="@style/CategoryStyle"
        android:background="@color/mint"
        android:onClick="openSafety"/>

    <Button
        android:id="@+id/button_places"
        android:text="Places of Distraction "
        style="@style/CategoryStyle"
        android:background="@color/lightmint"
        android:onClick="openPlaces"/>

    <Button
        android:id="@+id/button_profile"
        android:text="My Profile"
        style="@style/CategoryStyle"
        android:background="@color/mint"
        android:onClick="openProfile"/>


</LinearLayout>