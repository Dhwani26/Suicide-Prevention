<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_ask_for_help"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="ASK FOR HELP"
            android:layout_margin="25dp"
            android:padding="30dp"
            android:onClick="openAskForHelp" />
        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/index"
            android:layout_marginTop="25dp"
            android:onClick="openMusic"
            />
    </LinearLayout>



    <Button
        android:id="@+id/button_warning_signs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="warning signs !!!"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:padding="15dp"
        android:onClick="openWarningSignsActivity"/>

    <Button
        android:id="@+id/button_reasons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="what are your reasons to live ?"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:padding="15dp"
        android:onClick="openReasons"/>

    <Button
        android:id="@+id/button_safety"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="safety plan guide"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:padding="15dp"
        android:onClick="openSafety"/>

    <Button
        android:id="@+id/button_places"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="places of distraction "
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:padding="20dp"
        android:onClick="openPlaces"/>




</LinearLayout>